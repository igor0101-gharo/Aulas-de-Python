import os
os.system("cls")
from dataclasses import dataclass

@dataclass
class pessoa:
    nome: str
    e_mail: str
    telefone: str
    endereco: str

    def mostrar_dados(self):
        print(f"Nome: {self.nome}")
        print(f"E-mail: {self.e_mail}")
        print(f"Telefone: {self.telefone}")
        print(f"Endereço: {self.endereco}")        

pessoa1 = pessoa(nome=input("Digite seu nome:\n"),
                 e_mail=input("Digite o seu e-mail:\n"),
                 telefone=input("Digite o seu telefone:\n"),
                 endereco=input("Digite o seu endereço:\n"))

pessoa1.mostrar_dados()


